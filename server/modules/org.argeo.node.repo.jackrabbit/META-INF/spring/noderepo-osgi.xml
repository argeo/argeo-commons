<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/osgi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/osgi  
       http://www.springframework.org/schema/osgi/spring-osgi-1.1.xsd
       http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!-- REFERENCE -->
	<reference id="repositoryFactory" interface="javax.jcr.RepositoryFactory"
		cardinality="0..1">
		<listener ref="jcrAuthenticationProvider" bind-method="register"
			unbind-method="unregister" />
	</reference>
	<list id="repositories" interface="javax.jcr.Repository"
		cardinality="0..N">
		<listener ref="repositoryFactory" bind-method="register"
			unbind-method="unregister" />
	</list>

	<!-- SERVICES -->
	<service ref="repositoryFactory" interface="javax.jcr.RepositoryFactory" />

	<service ref="nodeJcrRepository" interface="javax.jcr.Repository">
		<service-properties>
			<beans:entry value="node">
				<beans:key>
					<util:constant
						static-field="org.argeo.jcr.ArgeoJcrConstants.JCR_REPOSITORY_ALIAS" />
				</beans:key>
			</beans:entry>
		</service-properties>
	</service>

	<service ref="nodeJcrSession" interface="javax.jcr.Session">
		<service-properties>
			<beans:entry value="node">
				<beans:key>
					<util:constant
						static-field="org.argeo.jcr.ArgeoJcrConstants.JCR_REPOSITORY_ALIAS" />
				</beans:key>
			</beans:entry>
		</service-properties>
	</service>

	<service ref="jcrAuthenticationProvider"
		interface="org.springframework.security.providers.AuthenticationProvider" />

</beans:beans>