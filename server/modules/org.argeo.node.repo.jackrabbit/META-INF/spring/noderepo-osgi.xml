<?xml version="1.0" encoding="UTF-8"?>
<beans:beans xmlns="http://www.springframework.org/schema/osgi"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:beans="http://www.springframework.org/schema/beans"
	xmlns:util="http://www.springframework.org/schema/util"
	xsi:schemaLocation="http://www.springframework.org/schema/osgi  
       http://www.springframework.org/schema/osgi/spring-osgi-1.1.xsd
       http://www.springframework.org/schema/beans   
       http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
       http://www.springframework.org/schema/util
       http://www.springframework.org/schema/util/spring-util-2.5.xsd">

	<!-- REFERENCE -->
	<list id="repositories" interface="javax.jcr.Repository"
		cardinality="0..N">
		<listener ref="repositoryFactory" bind-method="register"
			unbind-method="unregister" />
	</list>

	<!-- SERVICES -->
	<service ref="nodeJcrRepository">
		<interfaces>
			<beans:value>javax.jcr.Repository</beans:value>
			<beans:value>org.argeo.jcr.MaintainedRepository</beans:value>
		</interfaces>
		<service-properties>
			<beans:entry key="argeo.jcr.repository.alias" value="node" />
			<beans:entry key="argeo.jcr.repository.home" value="${argeo.node.repo.home}" />
		</service-properties>
	</service>
	<service ref="repositoryFactory" interface="javax.jcr.RepositoryFactory" />
</beans:beans>