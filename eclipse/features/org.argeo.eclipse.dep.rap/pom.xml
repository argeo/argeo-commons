			<groupId>org.mortbay.jetty</groupId>
			<artifactId>org.mortbay.jetty.server</artifactId>
		</dependency>
		<dependency>
			<groupId>org.mortbay.jetty</groupId>
			<artifactId>org.mortbay.jetty.util</artifactId>
