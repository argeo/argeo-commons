				<exclusion>
					<groupId>org.argeo.tp.rap.platform</groupId>
					<artifactId>org.eclipse.rap.demo.controls</artifactId>
				</exclusion>
				<exclusion>
					<groupId>org.argeo.tp.rap.platform</groupId>
